<Window x:Class="PersonalFinanceTracker.cs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalFinanceTracker.cs"
        mc:Ignorable="d"
        Title="Finance Falcon" Height="700" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Section -->
        <TextBlock Text="Finance Tracker" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" Grid.Row="0"/>

        <!-- Balance and Expenses Display -->
        <StackPanel Grid.Row="1" Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="TOTAL BALANCE: " FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="{Binding TotalBalance}" FontSize="16" FontWeight="Bold" Margin="5,0"/>
            <TextBlock Text="TOTAL EXPENSES: " FontSize="16" FontWeight="Bold" Margin="20,0,0,0"/>
            <TextBlock Text="{Binding TotalExpenses}" FontSize="16" FontWeight="Bold" Margin="5,0"/>
        </StackPanel>
        
        <!-- Main Content Section -->
        <StackPanel Grid.Row="2" Margin="10">
            
            <!-- Income Section -->
            <GroupBox Header="Income" Margin="0,0,0,10">
                <StackPanel>
                    <Label>Amount:</Label>
                    <TextBox ToolTip="Enter income amount"/>
                    <Button Content="Add Income" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Expenses Section -->
            <GroupBox Header="Expenses" Margin="0,0,0,10">
                <StackPanel>
                    <Label>Amount:</Label>
                    <TextBox ToolTip="Enter expense amount"/>
                    <Label>Category:</Label>
                    <ComboBox>
                        
                        <!-- Slightly hardcoded for second -->
                        <ComboBoxItem Content="Groceries"/>
                        <ComboBoxItem Content="Utilities"/>
                        <ComboBoxItem Content="Rent"/>
                        <!-- Add more -->
                    </ComboBox>
                    <Button Content="Add Expense" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- File Operations -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save Data" Margin="5"/>
                <Button Content="Load Data" Margin="5"/>
                <Button Content="Generate Report" Margin="5"/>
            </StackPanel>
        </StackPanel>

       
    </Grid>
</Window>